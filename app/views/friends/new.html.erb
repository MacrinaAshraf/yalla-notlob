<h1>New Friend</h1>
<div class="container">
    <h1 class="title">My Friends</h1>
        <%= form_with model: @friend, local: true do |form| %>
    <div class="row">
        <div class="col-md-3 ">
            <%= form.label :email %><br> 
        </div>
        <div class="col-md-4">
            <%= form.email_field :email, class:'form-control' %>
        </div>
        <div class="col-md-2">
            <input type="submit" class="btn btn-primary" value="send">
        </div>
    </div>
    <% end %>

