<% content_for :title do %>
    Users in Groups
    <% end %>
<% if flash[:friend_error].present? %>
    <div class ="alert alert-danger>
    <% flash[:friend_error] %>
    </div>
<% end %>
<% if flash[:notice].present? %>
    <div class ="alert alert-success">
        <% flash[:notice] %>
    </div>
<% end %>
<div class="container">
     <div class="row align-items-center">
         <div class="userInfo">
         <h3><%= @group.name %></h3>
         <div class="form">
        <%= form_with(url: "group_users_path", method: "post") do %>
            <div class="form-group">
                <%= text_field_tag :name ,nil, placeholder: "Enter email of friends..." %>
                    <%= submit_tag "Add User", class:"btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
<% @group.users.each do |user| %>  
    <div class="card md-6 mb-4">
        <div class="card-body">
            <%= user.email %>
            <%= link_to "Delete", delete_user_path(user, :group_id => @group) , method: :delete , class:"btn btn-danger" , data: { confirm: "Are you sure that you want to delete this group ?" } %>
        </div>
    </div>
<% end %>
