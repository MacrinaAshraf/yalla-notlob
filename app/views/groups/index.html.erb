<% content_for :title do %>
  Groups
<% end %>
    <% if flash[:group_error].present? %>
            <div class ="alert alert-danger>
                <% flash[:group_error] %>
            </div>
    <% end %>
    <div class="container-group">
    <h1>Add Group</h1>
    <div class="formContent">
    <%= form_with(url: "/groups", method: "post") do %>
        <div class="form-group">
          <%= text_field_tag :name ,nil, placeholder: "Enter name of group...",class:"form-control" %><br>
          <%= submit_tag "Add", class:"btn btn-primary" %>
        </div>
      <% end %>
      <% if  flash[:notice].present? %>
      <div class="alert alert-success">
      <%= flash[:notice] %>
      </div>
      <% end %>
      <% if  flash[:create_error].present? %>
      <div class="alert alert-danger">
      <%= flash[:create_error] %>
      </div>
      <% end %>
      <% if  flash[:delete_notice].present? %>
      <div class="alert alert-success">
      <%= flash[:delete_notice] %>
      </div>
      <% end %>
    <div class="groupInfo">
      <div class="showGroups">
       <h2>My Groups</h2>
        <% @group.each do |group| %>
          <div class="content-group"> 
          <%= link_to group.name , group , action: "show" %>
          <div class="links">
            <%= link_to "", group , action: "show" , class:"fa fa-user-plus" %>
            <%= link_to "x", group , method: :delete , class:"glyphicon glyphicon-remove" , data: { confirm: "Are you sure that you want to delete this group ?" } %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
    </div>
    

       