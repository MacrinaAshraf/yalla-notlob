<% content_for :title do %>
  Groups
<% end %>

<div class="container">

  <p id="notice"><%= notice %></p>
  <h1>Groups</h1>
  <%= form_for(@group, action_name:@group) do |f| %>
    <div class="form-group">
      <%= f.label :Groups %>
      <%= f.text_field :name , placeholder: "Enter name of group" %>
      <%= submit_tag "Add group", class:"btn btn-primary" %>
    </div>
  <% end %>
  <div class="groupInfo">
    <div class="showGroups">
     <p>My Groups</p>
      <% @groups.each do |group| %>
        <div class="content"> 
        <%= link_to group.name , group , action: "show" %>
        <div class="links">
          <%= link_to "", group , action: "update" , class:"fa fa-user-plus" %>
          <%= link_to "x", group , method: :delete , class:"glyphicon glyphicon-remove" , data: { confirm: "Are you sure that you want to delete this group ?" } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
