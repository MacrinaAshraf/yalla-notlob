<% content_for :not_signed_in do %>

  <div class="limiter">
    <div class="container-login100">
      <div class="wrap-login100">
        <div class="login100-form validate-form p-l-55 p-r-55 p-t-178">


          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <span class="login100-form-title">
              Sign Up
            </span>

            <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter username">
              <%= f.text_field :name, class: "input100", autofocus: true, autocomplete: "name", placeholder: 'user name' %>
              <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter email">
              <%= f.email_field :email, class: "input100", autocomplete: "email", placeholder: 'email' %>
              <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter password">
              <%= f.password_field :password, class: "input100", autocomplete: "new-password", placeholder: 'password' %>
              <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter confirm password">
              <%= f.password_field :password_confirmation, class: "input100", autocomplete: "new-password", placeholder: 'confirm password' %>
              <span class="focus-input100"></span>
            </div>


            <div class="container-login100-form-btn">
              <%= f.submit "Sign up", class: "login100-form-btn" %>
            </div>

            <div class="flex-col-c p-t-170 p-b-40">
              
              <span class="txt1 p-b-9">
              </span>


              <%= link_to('Sign in', new_user_session_path, class: "txt3") %>  </li>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% end %>







