<!doctype html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Restaurant</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/assets/loginutil.css">
	<link rel="stylesheet" type="text/css" href="/assets/loginmain.css">
<!--===============================================================================================-->
</head>
<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
        <div class="login100-form validate-form p-l-55 p-r-55 p-t-178">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <span class="login100-form-title">
              Sign In
              <br/>
                <% if notice %>
                  <%# <p style="color:green"><%= notice %>
                <% end %>
                <% if alert %>
                  <p style="color:red"><%= alert %></p>
                <% end %>
            </span>

    
            <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter email">
              <%= f.email_field :email, autofocus: true, autocomplete: 'email',class: 'input100',placeholder: 'email' %>
              <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input" data-validate = "Please enter password">
              <%= f.password_field :password, autocomplete: "current-password",class: 'input100',placeholder: 'password' %>
              <span class="focus-input100"></span>
            </div>

            <div class="text-right p-t-13 p-b-23">
              <span class="txt1">
                Forgot
              </span>
              <%= link_to('Password?', new_user_password_path	,class: "txt2" ) %>  </li>      

            </div>
              <% if devise_mapping.rememberable? %>
                  <div class="txt2">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

            <div class="container-login100-form-btn">
                  <%= f.submit "Log in",class:"login100-form-btn" %>
            </div>

            <div class="flex-col-c p-t-170 p-b-40">
              <span class="txt1 p-b-9">
                Donâ€™t have an account?
              </span>

              
            <%= link_to('Sign up now', new_user_registration_path	,class: "txt3" ) %>  </li>      
            
            </div>
            <%end %>	
          </div>
        </div>
		</div>
	</div>
	

</body>
</html>


 

